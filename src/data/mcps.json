{
  "version": "1.0.0",
  "provider": {
    "id": "Levante-Store",
    "name": "Levante MCP Store",
    "homepage": "https://example.com"
  },
  "servers": [
    {
      "id": "context7",
      "name": "Context7",
      "description": "Access up-to-date documentation and code examples for any library",
      "category": "documentation",
      "icon": "book",
      "logoUrl": "https://raw.githubusercontent.com/upstash/context7-mcp/main/logo.svg",
      "provider": "levante",
      "status": "active",
      "npmPackage": "@upstash/context7-mcp",
      "version": "latest",
      "transport": "stdio",
      "transportOptions": {
        "type": "stdio",
        "autoDetect": false
      },
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "env": {},
      "configuration": {
        "fields": [
          {
            "key": "command",
            "label": "MCP Server Command",
            "type": "text",
            "required": true,
            "description": "Path to the MCP server executable",
            "placeholder": "npx",
            "defaultValue": "npx"
          },
          {
            "key": "args",
            "label": "Command Arguments",
            "type": "text",
            "required": true,
            "description": "Arguments including package name",
            "placeholder": "-y @upstash/context7-mcp@latest",
            "defaultValue": "-y @upstash/context7-mcp@latest"
          }
        ],
        "defaults": {
          "command": "npx",
          "args": "-y @upstash/context7-mcp@latest"
        },
        "template": {
          "type": "stdio",
          "command": "npx",
          "args": [
            "-y",
            "@upstash/context7-mcp@latest"
          ],
          "env": {}
        }
      }
    },
    {
      "id": "github",
      "name": "GitHub Copilot MCP",
      "description": "Access GitHub repositories and code through Copilot MCP API",
      "category": "development",
      "icon": "github",
      "logoUrl": "https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png",
      "provider": "levante",
      "status": "active",
      "version": "1.0.0",
      "transport": "http",
      "transportOptions": {
        "type": "http",
        "autoDetect": false
      },
      "command": "",
      "args": [],
      "env": {
        "baseUrl": {
          "label": "API Base URL",
          "required": true,
          "type": "string",
          "default": "https://api.githubcopilot.com/mcp/",
          "description": "GitHub Copilot MCP API endpoint"
        },
        "github_mcp_pat": {
          "label": "GitHub Personal Access Token",
          "required": true,
          "type": "string",
          "description": "GitHub Personal Access Token for authentication"
        }
      },
      "configuration": {
        "fields": [
          {
            "key": "baseUrl",
            "label": "API Base URL",
            "type": "text",
            "required": true,
            "description": "GitHub Copilot MCP API endpoint",
            "placeholder": "https://api.githubcopilot.com/mcp/",
            "defaultValue": "https://api.githubcopilot.com/mcp/"
          },
          {
            "key": "github_mcp_pat",
            "label": "GitHub Personal Access Token",
            "type": "password",
            "required": true,
            "description": "Your GitHub Personal Access Token for authentication",
            "placeholder": "ghp_xxxxxxxxxxxxxxxxxxxx"
          }
        ],
        "defaults": {
          "baseUrl": "https://api.githubcopilot.com/mcp/"
        },
        "template": {
          "type": "http",
          "baseUrl": "https://api.githubcopilot.com/mcp/",
          "headers": {
            "Authorization": "Bearer ${github_mcp_pat}"
          }
        }
      }
    },
    {
      "id": "playwright",
      "name": "Playwright",
      "description": "Browser automation and web testing with Playwright",
      "category": "automation",
      "icon": "globe",
      "logoUrl": "https://playwright.dev/img/playwright-logo.svg",
      "provider": "levante",
      "status": "active",
      "npmPackage": "@playwright/mcp",
      "version": "latest",
      "transport": "stdio",
      "transportOptions": {
        "type": "stdio",
        "autoDetect": false
      },
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ],
      "env": {},
      "configuration": {
        "fields": [
          {
            "key": "command",
            "label": "MCP Server Command",
            "type": "text",
            "required": true,
            "description": "Path to the MCP server executable",
            "placeholder": "npx",
            "defaultValue": "npx"
          },
          {
            "key": "args",
            "label": "Command Arguments",
            "type": "text",
            "required": true,
            "description": "Arguments including package name",
            "placeholder": "@playwright/mcp@latest",
            "defaultValue": "@playwright/mcp@latest"
          }
        ],
        "defaults": {
          "command": "npx",
          "args": "@playwright/mcp@latest"
        },
        "template": {
          "type": "stdio",
          "command": "npx",
          "args": [
            "@playwright/mcp@latest"
          ],
          "env": {}
        }
      }
    },
    {
      "id": "microsoft-docs",
      "name": "Microsoft Docs",
      "description": "Access Microsoft Learn documentation and technical resources",
      "category": "documentation",
      "icon": "book",
      "logoUrl": "https://learn.microsoft.com/media/logos/logo-ms-social.png",
      "provider": "levante",
      "status": "active",
      "version": "1.0.0",
      "transport": "http",
      "transportOptions": {
        "type": "http",
        "autoDetect": false
      },
      "command": "",
      "args": [],
      "env": {
        "baseUrl": {
          "label": "API Base URL",
          "required": true,
          "type": "string",
          "default": "https://learn.microsoft.com/api/mcp",
          "description": "Microsoft Learn MCP API endpoint"
        }
      },
      "configuration": {
        "fields": [
          {
            "key": "baseUrl",
            "label": "API Base URL",
            "type": "text",
            "required": true,
            "description": "Microsoft Learn MCP API endpoint",
            "placeholder": "https://learn.microsoft.com/api/mcp",
            "defaultValue": "https://learn.microsoft.com/api/mcp"
          }
        ],
        "defaults": {
          "baseUrl": "https://learn.microsoft.com/api/mcp"
        },
        "template": {
          "type": "http",
          "baseUrl": "https://learn.microsoft.com/api/mcp",
          "headers": {}
        }
      }
    },
    {
      "id": "supabase",
      "name": "Supabase",
      "description": "Access Supabase database and API through MCP",
      "category": "database",
      "icon": "database",
      "logoUrl": "https://supabase.com/brand-assets/supabase-logo-icon.png",
      "provider": "levante",
      "status": "active",
      "version": "1.0.0",
      "transport": "http",
      "transportOptions": {
        "type": "http",
        "autoDetect": false
      },
      "command": "",
      "args": [],
      "env": {
        "SUPABASE_PROJECT_REF": {
          "label": "Supabase Project Reference",
          "required": true,
          "type": "string",
          "description": "Your Supabase project reference ID (found in project settings)"
        },
        "SUPABASE_ACCESS_TOKEN": {
          "label": "Supabase Access Token",
          "required": true,
          "type": "string",
          "description": "Your Supabase access token for authentication"
        }
      },
      "configuration": {
        "fields": [
          {
            "key": "SUPABASE_PROJECT_REF",
            "label": "Supabase Project Reference",
            "type": "text",
            "required": true,
            "description": "Your Supabase project reference ID (found in project settings)",
            "placeholder": "abcdefghijklmnop"
          },
          {
            "key": "SUPABASE_ACCESS_TOKEN",
            "label": "Supabase Access Token",
            "type": "password",
            "required": true,
            "description": "Your Supabase access token for authentication",
            "placeholder": "sbp_xxxxxxxxxxxxxxxxxxxx"
          }
        ],
        "defaults": {},
        "template": {
          "type": "http",
          "baseUrl": "https://mcp.supabase.com/mcp?project_ref=${SUPABASE_PROJECT_REF}",
          "headers": {
            "Authorization": "Bearer ${SUPABASE_ACCESS_TOKEN}"
          }
        }
      }
    }
  ]
}