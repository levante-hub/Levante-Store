{
  "$schema": "../_schema.json",
  "id": "n8n",
  "name": "n8n",
  "description": "Connect to your n8n instance to search, retrieve metadata, and trigger exposed workflows via MCP",
  "category": "automation",
  "icon": "n8n",
  "logoUrl": "https://n8n.io/favicon.ico",
  "source": "official",
  "maintainer": {
    "name": "n8n",
    "url": "https://n8n.io",
    "github": "n8n-io"
  },
  "status": "active",
  "version": "latest",
  "transport": "streamable-http",
  "auth": {
    "type": "api-key",
    "note": "Requires an MCP access token generated from your n8n instance settings"
  },
  "inputs": {
    "N8N_MCP_BASE_URL": {
      "label": "n8n Instance URL",
      "required": true,
      "type": "string",
      "description": "Your n8n instance URL (e.g., https://your-instance.app.n8n.cloud/mcp-server/http)"
    },
    "N8N_MCP_TOKEN": {
      "label": "MCP Access Token",
      "required": true,
      "type": "password",
      "description": "MCP access token from your n8n instance settings"
    }
  },
  "configuration": {
    "template": {
      "type": "streamable-http",
      "url": "${N8N_MCP_BASE_URL}",
      "headers": {
        "authorization": "Bearer ${N8N_MCP_TOKEN}"
      }
    }
  },
  "metadata": {
    "homepage": "https://docs.n8n.io/advanced-ai/accessing-n8n-mcp-server/",
    "repository": "https://github.com/n8n-io/n8n",
    "addedAt": "2025-12-18",
    "lastUpdated": "2025-12-18"
  }
}