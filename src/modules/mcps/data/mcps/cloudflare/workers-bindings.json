{
  "$schema": "../_schema.json",
  "id": "cloudflare-workers-bindings",
  "name": "Workers Bindings",
  "description": "Create applications with storage, AI, and compute primitives including KV, R2, D1, and Workers AI",
  "category": "development",
  "icon": "code",
  "logoUrl": "https://developers.cloudflare.com/_astro/logo.DAG2yejx.svg",
  "source": "official",
  "maintainer": {
    "name": "Cloudflare",
    "url": "https://cloudflare.com",
    "github": "cloudflare"
  },
  "status": "active",
  "version": "1.0.0",
  "transport": "streamable-http",
  "inputs": {
    "CLOUDFLARE_API_TOKEN": {
      "label": "Cloudflare API Token",
      "required": true,
      "type": "password",
      "description": "API token from dash.cloudflare.com/profile/api-tokens"
    }
  },
  "configuration": {
    "template": {
      "type": "streamable-http",
      "url": "https://bindings.mcp.cloudflare.com/mcp",
      "headers": {
        "Authorization": "Bearer ${CLOUDFLARE_API_TOKEN}"
      }
    }
  },
  "metadata": {
    "homepage": "https://developers.cloudflare.com/agents/model-context-protocol/mcp-servers-for-cloudflare/",
    "repository": "https://github.com/cloudflare/mcp-server-cloudflare",
    "addedAt": "2025-12-17",
    "lastUpdated": "2025-12-17"
  }
}
